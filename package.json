{
  "name": "pits-to-geojson",
  "version": "0.6.1",
  "description": "Convert NDJSON files containing Histograph PITs to GeoJSON",
  "main": "index.js",
  "bin": {
    "pits-to-geojson": "cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/histograph/pits-to-geojson.git"
  },
  "scripts": {
    "test": "jshint *.js && jscs *.js"
  },
  "author": "Bert Spaan",
  "license": "MIT",
  "devDependencies": {
    "jscs": "^1.10.0",
    "jshint": "^2.6.0",
    "tape": "^3.4.0"
  },
  "dependencies": {
    "JSONStream": "^1.0.7",
    "highland": "^2.5.1",
    "minimist": "^1.1.1"
  },
  "jshintConfig": {
    "node": true,
    "globalstrict": false,
    "undef": true,
    "unused": true,
    "noarg": true
  },
  "jscsConfig": {
    "preset": "airbnb",
    "requireCamelCaseOrUpperCaseIdentifiers": null,
    "disallowMultipleVarDecl": true,
    "requireMultipleVarDecl": null
  }
}
